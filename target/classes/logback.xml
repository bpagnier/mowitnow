<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yy/MM/dd HH:mm:ss.SSS} %-5level %logger{10}.%M\(l.%line\) - %msg%n</pattern>
        </encoder>
    </appender>
    
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>